<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>42</zIndex>	      
        <type>vertical</type>
        <pos>0.08 0.065</pos>
        <size>0.84 0.885</size>
        <logoScale>1.05</logoScale>
        <logoSize>0.8 0.8</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>
		<logoAlignment>center</logoAlignment>        
      </carousel>                 
      <text name="systemInfo">     
         <pos>0.0 0.005</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>00ff00</color>
         <fontPath>./_inc/fonts/digital-7 (italic).ttf</fontPath>
	     <fontSize>0.022</fontSize>
         <zIndex>45</zIndex>	     
      </text>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/main.png</path>
         <zIndex>2</zIndex>          
      </image>                   
   </view>
</feature>


